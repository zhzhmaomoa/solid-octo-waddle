/* component/dialog.wxss */
.hidden{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9000;
  height: 100%;
  width: 100vw;
}
.main{
  z-index: 9999;
  position: fixed;
  bottom:0;
  left: 0;
  background-color: #001D3D;
  width: 100vw;
  border-top-right-radius: 5vh;
  border-top-left-radius: 5vh;
}
.header{
  height: 4.8vh;
  border-bottom: #003566 solid 0.2vh;
  position: relative;
}
.icon-downward{
  position: absolute;
  top:50%;
  left:50%;
  width:10vw;
  height: 3vh;
  transform: translate(-50%,-50%);
}
.body{
  width:100vw;
  background-color: #000814;
}
.footer{
  height: 8vh;
  width: 100vw;
  border-top:#003566 solid 0.2vh;
}