<!--index.wxml-->
<view class="container">
    <view class="head">
      <button class="add-btn" bindtap="handleAddMember">新增</button>
    </view>
    <scroll-view class="table" scroll-y="true">
      <view class="tr thead">
        <view class="tname td">成员名字</view>
        <view class="ttime td">创建时间</view>
        <view class="tdetail td">详情</view>
      </view>
      <view wx:for="{{members}}" wx:key="item" class="tr">
          <view class="tname td">
            {{item.name}}
          </view>
          <view class="ttime td">
            {{item.createdAt}}
          </view>
          <view class="tdetial td">
            <image class="edit-icon" src="../../assets/edit.svg"></image>
          </view>
        </view>
    </scroll-view>
</view>
