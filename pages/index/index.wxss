.x {
  position: relative;
  /*photo-line-x正常情况下会贴在父元素左边缘向右排列，下面的代码使photo-line-x即使宽度远超父元素也会在父元素中居中显示  */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #171717;
  overflow: hidden;
  background: url("https://fami.zhzhmaomoa.pet/assets/bg.webp") center / cover no-repeat;
  perspective: 800px;
}

.photo-line-x {
  display: flex;
  position: absolute;
  flex-direction: column;
  overflow: hidden;
}

.line {
  display: flex;
  height: 192px;
  margin: 5px 0;
  flex-shrink: 0;
}

.img-x {
  width: 240px;
  margin: 0 5px;
  height: inherit;
  flex-shrink: 0;
}
.rotate-x{
  height: inherit;
  transform-style: preserve-3d;
  position: relative;
  transition:transform 1s 2s;
}
.rotate-x.rotate {
  transform: rotateY(180deg);
}
.img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 14px;
  position: absolute;
  backface-visibility: hidden;
}
.img.face{
  transform: rotateY(0deg);
  transform-origin: top center;
}
.img.back {
  transform: rotateY(180deg);
}
@keyframes bellSwing {
  0%   { transform: rotate(0deg); }
  20%  { transform: rotate(-6deg); }
  40%  { transform: rotate(6deg); }
  60%  { transform: rotate(-4deg); }
  80%  { transform: rotate(4deg); }
  100% { transform: rotate(0deg); }
}
.face.bell-swing {
  animation: bellSwing 0.8s ease-in-out infinite;
}