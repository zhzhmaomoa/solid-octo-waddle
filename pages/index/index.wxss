/* pages/index2/index.wxss */
page{
 overflow-x: scroll;
 --imgR:61vw;
}
.x{
  background-color: rgb(235,235,235);
  position: absolute;
  width: calc( (var(--imgR) + 80rpx) * 6 );
  height: 100vh;
  overflow: hidden;
}
.img{
  position: absolute;
  top: 0;bottom: 0;
  margin: auto 0;
  width: var(--imgR);
  height: var(--imgR);
  background-size: cover;
  background-repeat: no-repeat;
  background-position-y: center;
  border-radius: 50%;
  animation: move 64s linear infinite both;
}
@keyframes move{
  0%{
    left: calc(( var(--imgR) + 80rpx) * 6 );
  }
  100%{
    left: calc( (var(--imgR) + 80rpx) * -1 );
  }
}
.img:nth-child(1){
  animation-delay: -56s;
}
.img:nth-child(2){
  animation-delay: -48s;
}
.img:nth-child(3){
  animation-delay: -40s;
}
.img:nth-child(4){
  animation-delay: -32s;
}
.img:nth-child(5){
  animation-delay: -24s;
}
.img:nth-child(6){
  animation-delay: -16s;
}
.img:nth-child(7){
  animation-delay: -8s;
}
.img:nth-child(8){
  animation-delay: 0s;
}