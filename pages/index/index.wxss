.x {
  position: relative;
  /*photo-line-x正常情况下会贴在父元素左边缘向右排列，下面的代码使photo-line-x即使宽度远超父元素也会在父元素中居中显示  */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  overflow: hidden;
  background-color: #f3edde;
  background-image:
    radial-gradient(circle at 14% 10%, rgba(255, 252, 243, 0.7) 0%, rgba(255, 252, 243, 0) 26%),
    radial-gradient(circle at 84% 14%, rgba(232, 214, 182, 0.32) 0%, rgba(232, 214, 182, 0) 30%),
    radial-gradient(circle at 80% 78%, rgba(219, 194, 155, 0.24) 0%, rgba(219, 194, 155, 0) 24%),
    repeating-linear-gradient(
      -12deg,
      rgba(148, 126, 95, 0.03) 0px,
      rgba(148, 126, 95, 0.03) 1px,
      rgba(255, 255, 255, 0) 1px,
      rgba(255, 255, 255, 0) 6px
    ),
    linear-gradient(180deg, #f8f3e8 0%, #f0e5d3 52%, #e8dbc3 100%);
  perspective: 800px;
}

.photo-line-x {
  display: flex;
  position: absolute;
  flex-direction: column;
  overflow: hidden;
}

.line {
  display: flex;
  height: 192px;
  margin: 5px 0;
  flex-shrink: 0;
}

.img-x {
  width: 240px;
  margin: 0 5px;
  height: inherit;
  flex-shrink: 0;
}
.rotate-x{
  height: inherit;
  transform-style: preserve-3d;
  position: relative;
  transition:transform 1s 2s;
}
.rotate-x.rotate {
  transform: rotateY(180deg);
}
.img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 14px;
  border: 1px solid rgba(255, 250, 239, 0.78);
  box-shadow: 0 3px 10px rgba(97, 73, 44, 0.12);
  position: absolute;
  backface-visibility: hidden;
}
.img.face{
  transform: rotateY(0deg);
  transform-origin: top center;
}
.img.back {
  transform: rotateY(180deg);
}
@keyframes bellSwing {
  0%   { transform: rotate(0deg); }
  20%  { transform: rotate(-6deg); }
  40%  { transform: rotate(6deg); }
  60%  { transform: rotate(-4deg); }
  80%  { transform: rotate(4deg); }
  100% { transform: rotate(0deg); }
}
.face.bell-swing {
  animation: bellSwing 0.8s ease-in-out infinite;
}
