/* pages/index2/index.wxss */
.page{
 background: linear-gradient(to right bottom,#395e50,#224e3d);
 overflow-x: scroll;
 display: grid;
 grid-template-rows: repeat(4,1fr);
 grid-auto-flow: column;
 grid-auto-columns: 2px;
 padding: 10px 0;
 row-gap: 10px;
 justify-items: end;
}
.img{
  height: calc( (100vh - 50px) / 4 );
  position: relative;
  box-sizing: border-box;
  border:10rpx solid #232a2a;
}

