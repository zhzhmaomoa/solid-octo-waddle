.x {
  position: relative;
  /*photo-line-x正常情况下会贴在父元素左边缘向右排列，下面的代码使photo-line-x即使宽度远超父元素也会在父元素中居中显示  */
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  overflow: hidden;
  background-color: #f2ead8;
  background-image:
    radial-gradient(circle at 12% 9%, rgba(255, 251, 243, 0.76) 0%, rgba(255, 251, 243, 0) 24%),
    radial-gradient(circle at 84% 14%, rgba(227, 205, 170, 0.26) 0%, rgba(227, 205, 170, 0) 32%),
    repeating-linear-gradient(
      0deg,
      rgba(182, 159, 125, 0) 0px,
      rgba(182, 159, 125, 0) 38px,
      rgba(182, 159, 125, 0.26) 38px,
      rgba(182, 159, 125, 0.26) 40px
    ),
    repeating-linear-gradient(
      -14deg,
      rgba(145, 123, 90, 0.025) 0px,
      rgba(145, 123, 90, 0.025) 1px,
      rgba(255, 255, 255, 0) 1px,
      rgba(255, 255, 255, 0) 8px
    ),
    linear-gradient(180deg, #f8f3e8 0%, #efe3cf 55%, #e6d6bc 100%);
  perspective: 800px;
}

.photo-line-x {
  display: flex;
  position: absolute;
  flex-direction: column;
  overflow: hidden;
}

.line {
  display: flex;
  height: 166px;
  margin: 14px 0;
  flex-shrink: 0;
}

.img-x {
  width: 208px;
  margin: 0 16px;
  height: inherit;
  flex-shrink: 0;
}
.rotate-x{
  height: inherit;
  transform-style: preserve-3d;
  position: relative;
  transition:transform 1s 2s;
}
.rotate-x.rotate {
  transform: rotateY(180deg);
}
.img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  border: 1px solid rgba(255, 250, 239, 0.72);
  box-shadow: 0 2px 7px rgba(92, 70, 42, 0.12);
  position: absolute;
  backface-visibility: hidden;
}
.img.face{
  transform: rotateY(0deg);
  transform-origin: top center;
}
.img.back {
  transform: rotateY(180deg);
}
@keyframes bellSwing {
  0%   { transform: rotate(0deg); }
  20%  { transform: rotate(-6deg); }
  40%  { transform: rotate(6deg); }
  60%  { transform: rotate(-4deg); }
  80%  { transform: rotate(4deg); }
  100% { transform: rotate(0deg); }
}
.face.bell-swing {
  animation: bellSwing 0.8s ease-in-out infinite;
}
